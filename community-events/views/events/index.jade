extends ../../layouts/default

block head
  title View Events

block body
  div.row
    div.col-sm-8
      h1.page-header View Events
      ul.events
        each event, i in data
          li
            strong #{event.name} -
            | Posted by #{event.username}
          p #{event.description}
          a(href='/events/show/#{event._id}', class='btn btn-default') Read More
    div.col-sm-4
      h1.page-header Sidebar
